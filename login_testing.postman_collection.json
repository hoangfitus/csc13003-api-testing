						},
						{
							"key": "password",
							"value": "{{password}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://api-with-bugs.practicesoftwaretesting.com/users/login",
					"protocol": "https",
					"host": [
						"api-with-bugs",
						"practicesoftwaretesting",
						"com"
					],
					"path": [
						"users",
						"login"
					]
				}
			},
			"response": []
		}
	]
