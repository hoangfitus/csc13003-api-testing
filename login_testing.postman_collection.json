{
	"info": {
		"_postman_id": "a76dc816-b517-4f0e-86b3-9baa8334913b",
		"name": "Login Testing",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "37129851"
	},
	"item": [
		{
			"name": "/users/login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is \" + pm.iterationData.get(\"expectedStatus\"), () => {",
							"    pm.expect(pm.response.code).to.eql(pm.iterationData.get(\"expectedStatus\"));",
							"});",
							"",
							"pm.test(\"Response time < \" + pm.iterationData.get(\"maxResponseTime\") + \"ms\", () => {",
							"    pm.expect(pm.response.responseTime).to.be.below(Number(pm.iterationData.get(\"maxResponseTime\") || 500));",
							"});",
							"",
							"pm.test(\"Content-Type is application/json\", () => {",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
							"});",
							"",
							"const res = pm.response.json();",
							"if (pm.response.code === 200) {",
							"    pm.test(\"Contains access_token\", () => {",
							"        pm.expect(res).to.have.property(\"access_token\");",
							"        pm.expect(res.access_token).to.match(/^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_.+/=]*$/);",
							"    });",
							"",
							"    pm.test(\"Token type is Bearer\", () => {",
							"        pm.expect(String(res.token_type).toLowerCase()).to.eql(\"bearer\");",
							"    });",
							"",
							"    pm.test(\"expires_in is a number > 0\", () => {",
							"        pm.expect(res.expires_in).to.be.a(\"number\").and.to.be.above(0);",
							"    });",
							"} else {",
							"    pm.test(\"Should contain error message\", () => {",
							"        pm.expect(res).to.have.property(\"error\");",
							"        pm.expect(res.error).to.be.a(\"string\").and.not.empty;",
							"    });",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "email",
