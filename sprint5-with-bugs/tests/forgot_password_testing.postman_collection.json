          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is \" + pm.iterationData.get(\"expectedStatus\"), () => {",
              "    pm.expect(pm.response.code).to.eql(pm.iterationData.get(\"expectedStatus\"));",
              "});",
              "",
              "pm.test(\"Response time < \" + pm.iterationData.get(\"maxResponseTime\") + \"ms\", () => {",
              "    pm.expect(pm.response.responseTime).to.be.below(Number(pm.iterationData.get(\"maxResponseTime\") || 500));",
              "});",
              "",
              "pm.test(\"Content-Type is application/json\", () => {",
              "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
              "});",
              "",
              "const res = pm.response.json();",
              "if (pm.response.code === 200) {",
              "    pm.test(\"Success message returned\", () => {",
              "        pm.expect(res).to.have.property(\"message\");",
              "        pm.expect(res.message).to.be.a(\"string\").and.not.empty;",
              "    });",
              "} else {",
              "    pm.test(\"Should contain error message\", () => {",
              "        pm.expect(res).to.have.property(\"message\");",
              "        pm.expect(res.message).to.be.a(\"string\").and.not.empty;",
              "    });",
              "}"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
